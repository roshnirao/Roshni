<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent"  tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MCQs"
        android:id="@+id/button"
        android:onClick="selectFrag"
        android:textSize="19sp"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/fragment_place"
        android:layout_toStartOf="@+id/fragment_place"
        android:textColor="#ff020102" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fill in the Blanks"
        android:id="@+id/button2"
        android:onClick="selectFrag"
        android:textSize="12sp"
        android:layout_below="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="52dp"
        android:textColor="#ff080208" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Match the following"
        android:id="@+id/button3"
        android:onClick="selectFrag"
        android:textSize="12sp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/fragment_place"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ff040404" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test Yourself!"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="19dp"
        android:textStyle="italic"
        android:typeface="monospace"
        android:textColor="#ff010101" />
    <fragment
        android:name="com.fgtest.fragmenttest.FragmentOne"
        android:id="@+id/fragment_place"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_toRightOf="@+id/button2"
        android:layout_toEndOf="@+id/button2"
        android:layout_alignParentTop="true" />



</RelativeLayout>
